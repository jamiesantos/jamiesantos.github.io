---
import PageLayout from "@/layouts/Base.astro";
---

<PageLayout meta={{ title: "Publications" }}>
	<section>
		<h1 class="title mb-8">Publications</h1>
		<p class="mb-4">A curated list of publications will appear here. For now, an example entry:</p>
		<ul role="list" class="space-y-4">
			<li>
				<a
					class="cactus-link"
					href="https://example.org/papers/autonomous-manipulation.pdf"
					target="_blank"
					rel="noopener"
				>
					Autonomous Manipulation for Space Robotics — Jamie Santos et al. (2025)
				</a>
				<div class="text-sm text-gray-600 dark:text-gray-400">
					Paper • <a
						class="underline"
						href="https://github.com/example/autonomous-manipulation"
						target="_blank"
						rel="noopener">Code</a
					> • <a
						class="underline"
						href="https://example.org/videos/autonomous-manipulation"
						target="_blank"
						rel="noopener">Video</a>
				</div>
			</li>
		</ul>
	</section>
</PageLayout>
